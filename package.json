{
    "name": "vscode-jest-runner",
    "displayName": "Jest Runner",
    "description": "Simple way to run or debug a single (or multiple) tests by right-clicking them.",
    "version": "0.0.3",
    "publisher": "firsttris",
    "icon": "public/icon.png",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.runJest",
                "title": "Run Jest"
            },
            {
                "command": "extension.debugJest",
                "title": "Debug Jest"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "extension.runJest",
                    "group": "navigation"
                },
                {
                    "when": "editorHasSelection",
                    "command": "extension.debugJest",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "prettier": "^1.9.2",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.6.0",
        "tslint-plugin-prettier": "^1.3.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
